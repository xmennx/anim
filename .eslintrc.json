{
  "env": {
      "jest": true,
      "browser": true,
      "es6": true 
  },
  "extends": "airbnb-base", 
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly" 
  },
  "parserOptions": { 
      "ecmaVersion": 2018, 
      "sourceType": "module"
  }, 
  "rules": {
      "no-restricted-syntax": [
          "error", 
          "LabeledStatement", 
          "WithStatement"
      ],
      "import/extensions": [
          "error",
          "ignorePackages"
          ]
   }
 }